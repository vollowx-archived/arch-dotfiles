include catppuccin-mocha

# target                 title     bg    text   indicator  border
client.focused           $blue     $base $text  $rosewater $blue
client.focused_inactive  $overlay0 $base $text  $rosewater $base
client.unfocused         $overlay0 $base $text  $rosewater $base
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $base
client.background        $base

default_border pixel 4
default_floating_border pixel 4
gaps inner 10
gaps outer 5

output eDP-1 scale 1

font JetBrainsMono Nerd Font 10
xwayland enabled

# Autostart
exec dbus-update-activation-environment --all
exec /usr/bin/gnome-keyring-daemon --start --components=secrets
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

exec swayidle -w \
  timeout 300 'swaylock -f' \
  timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f'
exec hyprpaper
bar {
  swaybar_command waybar
}
exec mako
exec wlsunset -l 39.9 -L 116.3

exec wl-paste --watch cliphist store
exec fcitx5 -d --replace
exec blueman-applet
exec nm-applet

exec sleep 1 && dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP

# Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term foot
set $menu wofi --show run

# Devices
input type:keyboard {
  xkb_layout us
  repeat_delay 300
  repeat_rate 30
}

input type:touchpad {
  dwt enabled
  accel_profile adaptive
  pointer_accel 0
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

seat * hide_cursor 8000

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

# Rules
for_window [app_id="mpv"]            floating enable 
for_window [app_id="mpv"]            resize set height 480
for_window [app_id="mpv"]            resize set width 800

# Keymaps
bindsym $mod+Return exec $term
bindsym $mod+d exec ~/.config/rofi/launcher.sh
bindsym $mod+q kill
bindsym $mod+Shift+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+Shift+r reload
bindsym $mod+x exec swaylock
bindsym $mod+Escape exec ~/.config/rofi/powermenu.sh
bindsym $mod+space floating toggle
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+v exec ~/.bin/choose-in-clipboard
bindsym $mod+c exec hyprpicker -n -a
bindsym $mod+delete exec ~/.bin/wm-do.sh mt

bindsym $mod+a focus parent
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
floating_modifier $mod normal

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

mode "resize" {
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym XF86AudioRaiseVolume exec ~/.bin/wm-do.sh v+
bindsym XF86AudioLowerVolume exec ~/.bin/wm-do.sh v-
bindsym XF86AudioMute exec ~/.bin/wm-do.sh vm

bindsym XF86MonBrightnessUp exec ~/.bin/wm-do.sh b+
bindsym XF86MonBrightnessDown exec ~/.bin/wm-do.sh b-

bindsym Print exec ~/.bin/wm-do.sh sca
bindsym Ctrl+Print exec ~/.bin/wm-do.sh scss
bindsym Shift+Print exec ~/.bin/wm-do.sh scsa
